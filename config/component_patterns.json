{
  "version": "1.0.0",
  "description": "React component patterns with design system classes",
  "patterns": {
    "button": {
      "jsx": "    <button className=\"btn-{variant}\">\n      {component_name}\n    </button>",
      "props": [
        {"name": "onClick", "type": "() => void"},
        {"name": "disabled", "type": "boolean"},
        {"name": "children", "type": "React.ReactNode"}
      ]
    },
    "card": {
      "jsx": "    <div className=\"card-interactive\">\n      <h3 className=\"text-2xl font-semibold mb-4\">{component_name}</h3>\n      <p className=\"text-neutral-600 dark:text-neutral-400 mb-6\">\n        {/* Add your card content here */}\n      </p>\n      <button className=\"btn-{variant}\">\n        Learn More\n      </button>\n    </div>",
      "props": [
        {"name": "title", "type": "string"},
        {"name": "description", "type": "string"},
        {"name": "children", "type": "React.ReactNode"}
      ]
    },
    "form": {
      "jsx": "    <form className=\"space-y-6\">\n      <div>\n        <label className=\"label\">Email Address</label>\n        <input \n          type=\"email\" \n          className=\"input\" \n          placeholder=\"you@example.com\"\n        />\n        <p className=\"helper-text\">We'll never share your email</p>\n      </div>\n      \n      <div>\n        <label className=\"label\">Password</label>\n        <input \n          type=\"password\" \n          className=\"input\"\n        />\n      </div>\n      \n      <button type=\"submit\" className=\"btn-primary w-full\">\n        Submit\n      </button>\n    </form>",
      "props": [
        {"name": "onSubmit", "type": "(e: React.FormEvent) => void"}
      ]
    },
    "modal": {
      "jsx": "    <div className=\"modal-overlay\">\n      <div className=\"modal-content\">\n        <div className=\"flex items-center justify-between mb-4\">\n          <h2 className=\"text-2xl font-semibold\">{component_name}</h2>\n          <button \n            className=\"btn-ghost btn-sm\"\n            aria-label=\"Close\"\n          >\n            âœ•\n          </button>\n        </div>\n        \n        <div className=\"mb-6\">\n          {/* Modal content */}\n        </div>\n        \n        <div className=\"flex gap-3 justify-end\">\n          <button className=\"btn-secondary\">Cancel</button>\n          <button className=\"btn-{variant}\">Confirm</button>\n        </div>\n      </div>\n    </div>",
      "props": [
        {"name": "isOpen", "type": "boolean"},
        {"name": "onClose", "type": "() => void"},
        {"name": "children", "type": "React.ReactNode"}
      ]
    },
    "list": {
      "jsx": "    <div className=\"space-y-3\">\n      {props.items.map((item, index) => (\n        <div \n          key={index}\n          className=\"card-hover flex items-center gap-4\"\n        >\n          <div className=\"flex-shrink-0 w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center\">\n            <span className=\"text-primary-600 dark:text-primary-400 text-xl\">\n              {item.icon}\n            </span>\n          </div>\n          <div className=\"flex-1\">\n            <h4 className=\"font-medium text-neutral-900 dark:text-white\">\n              {item.title}\n            </h4>\n            <p className=\"text-sm text-neutral-600 dark:text-neutral-400\">\n              {item.description}\n            </p>\n          </div>\n        </div>\n      ))}\n    </div>",
      "props": [
        {"name": "items", "type": "Array<{icon: string, title: string, description: string}>"}
      ]
    },
    "input": {
      "jsx": "    <div className=\"form-group\">\n      <label className=\"label\">\n        {props.label}\n      </label>\n      <input \n        type=\"{input_type}\"\n        className=\"input\"\n        placeholder={props.placeholder}\n      />\n      {props.helperText && (\n        <p className=\"helper-text\">{props.helperText}</p>\n      )}\n    </div>",
      "props": [
        {"name": "label", "type": "string"},
        {"name": "placeholder", "type": "string"},
        {"name": "helperText", "type": "string"},
        {"name": "type", "type": "string"}
      ]
    },
    "sidebar": {
      "jsx": "    <aside className=\"sidebar\">\n      <div className=\"p-6 border-b border-neutral-200 dark:border-neutral-800\">\n        <h2 className=\"text-xl font-bold text-neutral-900 dark:text-white\">\n          {component_name}\n        </h2>\n      </div>\n      \n      <nav className=\"p-4 space-y-2\">\n        {props.items.map((item, index) => (\n          <a\n            key={index}\n            href={item.href}\n            className=\"nav-item\"\n          >\n            <span className=\"mr-3\">{item.icon}</span>\n            {item.label}\n          </a>\n        ))}\n      </nav>\n    </aside>",
      "props": [
        {"name": "items", "type": "Array<{icon: string, label: string, href: string}>"}
      ]
    },
    "header": {
      "jsx": "    <header className=\"sticky top-0 z-50 w-full border-b border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900\">\n      <div className=\"container mx-auto px-4 h-16 flex items-center justify-between\">\n        <div className=\"flex items-center gap-8\">\n          <h1 className=\"text-2xl font-bold text-neutral-900 dark:text-white\">\n            {component_name}\n          </h1>\n          <nav className=\"hidden md:flex gap-6\">\n            {props.navItems?.map((item, index) => (\n              <a\n                key={index}\n                href={item.href}\n                className=\"text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white transition-colors\"\n              >\n                {item.label}\n              </a>\n            ))}\n          </nav>\n        </div>\n        \n        <button className=\"btn-primary\">\n          {props.ctaText || 'Get Started'}\n        </button>\n      </div>\n    </header>",
      "props": [
        {"name": "navItems", "type": "Array<{label: string, href: string}>"},
        {"name": "ctaText", "type": "string"}
      ]
    },
    "footer": {
      "jsx": "    <footer className=\"bg-neutral-900 dark:bg-black text-white py-12\">\n      <div className=\"container mx-auto px-4\">\n        <div className=\"grid grid-cols-1 md:grid-cols-4 gap-8\">\n          <div>\n            <h3 className=\"text-lg font-semibold mb-4\">{component_name}</h3>\n            <p className=\"text-neutral-400\">\n              {props.description || 'Your company description'}\n            </p>\n          </div>\n          \n          {props.sections?.map((section, index) => (\n            <div key={index}>\n              <h4 className=\"text-sm font-semibold mb-4 uppercase tracking-wider\">\n                {section.title}\n              </h4>\n              <ul className=\"space-y-2\">\n                {section.links.map((link, linkIndex) => (\n                  <li key={linkIndex}>\n                    <a href={link.href} className=\"text-neutral-400 hover:text-white transition-colors\">\n                      {link.label}\n                    </a>\n                  </li>\n                ))}\n              </ul>\n            </div>\n          ))}\n        </div>\n        \n        <div className=\"mt-12 pt-8 border-t border-neutral-800 text-center text-neutral-400\">\n          <p>&copy; {new Date().getFullYear()} {component_name}. All rights reserved.</p>\n        </div>\n      </div>\n    </footer>",
      "props": [
        {"name": "description", "type": "string"},
        {"name": "sections", "type": "Array<{title: string, links: Array<{label: string, href: string}>}>"}
      ]
    },
    "hero": {
      "jsx": "    <section className=\"hero-section\">\n      <div className=\"container mx-auto px-4 text-center\">\n        <h1 className=\"text-5xl md:text-7xl font-bold text-neutral-900 dark:text-white mb-6\">\n          {props.title || 'Welcome to ' + component_name}\n        </h1>\n        <p className=\"text-xl text-neutral-600 dark:text-neutral-400 mb-8 max-w-2xl mx-auto\">\n          {props.subtitle || 'Build amazing products with our platform'}\n        </p>\n        <div className=\"flex gap-4 justify-center\">\n          <button className=\"btn-primary btn-lg\">\n            {props.ctaPrimary || 'Get Started'}\n          </button>\n          <button className=\"btn-secondary btn-lg\">\n            {props.ctaSecondary || 'Learn More'}\n          </button>\n        </div>\n      </div>\n    </section>",
      "props": [
        {"name": "title", "type": "string"},
        {"name": "subtitle", "type": "string"},
        {"name": "ctaPrimary", "type": "string"},
        {"name": "ctaSecondary", "type": "string"}
      ]
    },
    "feature": {
      "jsx": "    <div className=\"feature-card\">\n      <div className=\"w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4\">\n        <span className=\"text-2xl\">{props.icon || 'âœ¨'}</span>\n      </div>\n      <h3 className=\"text-xl font-semibold mb-2 text-neutral-900 dark:text-white\">\n        {props.title || 'Feature Title'}\n      </h3>\n      <p className=\"text-neutral-600 dark:text-neutral-400\">\n        {props.description || 'Feature description goes here'}\n      </p>\n    </div>",
      "props": [
        {"name": "icon", "type": "string"},
        {"name": "title", "type": "string"},
        {"name": "description", "type": "string"}
      ]
    },
    "pricing": {
      "jsx": "    <div className=\"pricing-card\">\n      <div className=\"text-center mb-6\">\n        <h3 className=\"text-2xl font-bold text-neutral-900 dark:text-white mb-2\">\n          {props.planName || 'Pro Plan'}\n        </h3>\n        <div className=\"text-4xl font-bold text-primary-600 dark:text-primary-400\">\n          ${props.price || '29'}\n          <span className=\"text-lg text-neutral-600 dark:text-neutral-400\">/mo</span>\n        </div>\n      </div>\n      \n      <ul className=\"space-y-3 mb-6\">\n        {props.features?.map((feature, index) => (\n          <li key={index} className=\"flex items-center gap-2\">\n            <span className=\"text-primary-600 dark:text-primary-400\">âœ“</span>\n            <span className=\"text-neutral-700 dark:text-neutral-300\">{feature}</span>\n          </li>\n        ))}\n      </ul>\n      \n      <button className=\"btn-{variant} w-full\">\n        {props.ctaText || 'Get Started'}\n      </button>\n    </div>",
      "props": [
        {"name": "planName", "type": "string"},
        {"name": "price", "type": "number"},
        {"name": "features", "type": "string[]"},
        {"name": "ctaText", "type": "string"}
      ]
    },
    "messages": {
      "jsx": "    <div className=\"space-y-4\">\n      {props.messages.map((message, index) => (\n        <div\n          key={index}\n          className={`message-bubble ${\n            message.sender === 'user' ? 'message-user' : 'message-assistant'\n          }`}\n        >\n          <div className=\"message-avatar\">\n            {message.sender === 'user' ? 'ðŸ‘¤' : 'ðŸ¤–'}\n          </div>\n          <div className=\"message-content\">\n            <div className=\"message-header\">\n              <span className=\"font-medium\">{message.sender}</span>\n              <span className=\"text-xs text-neutral-500\">{message.timestamp}</span>\n            </div>\n            <p className=\"message-text\">{message.content}</p>\n          </div>\n        </div>\n      ))}\n    </div>",
      "props": [
        {"name": "messages", "type": "Array<{sender: string, content: string, timestamp: string}>"}
      ]
    }
  }
}
