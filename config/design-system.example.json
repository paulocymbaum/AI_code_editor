{
  "$schema": "https://design-tokens.org/schema/v1.0.0",
  "version": "1.0.0",
  "name": "Example Design System",
  "description": "A minimal example showing the JSON configuration structure",
  
  "metadata": {
    "author": "AI Code Editor Team",
    "lastUpdated": "2025-12-08",
    "license": "MIT"
  },
  
  "colors": {
    "primary": {
      "50": "#eff6ff",
      "100": "#dbeafe",
      "200": "#bfdbfe",
      "300": "#93c5fd",
      "400": "#60a5fa",
      "500": "#3b82f6",
      "600": "#2563eb",
      "700": "#1d4ed8",
      "800": "#1e40af",
      "900": "#1e3a8a"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f5f5f5",
      "200": "#e5e5e5",
      "300": "#d4d4d4",
      "400": "#a3a3a3",
      "500": "#737373",
      "600": "#525252",
      "700": "#404040",
      "800": "#262626",
      "900": "#171717"
    }
  },
  
  "typography": {
    "fontFamilies": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "mono": ["Fira Code", "Consolas", "monospace"]
    },
    "fontSizes": {
      "sm": ["0.875rem", { "lineHeight": "1.25rem" }],
      "base": ["1rem", { "lineHeight": "1.5rem" }],
      "lg": ["1.125rem", { "lineHeight": "1.75rem" }],
      "xl": ["1.25rem", { "lineHeight": "1.75rem" }]
    }
  },
  
  "spacing": {
    "values": {
      "1": "0.25rem",
      "2": "0.5rem",
      "4": "1rem",
      "6": "1.5rem",
      "8": "2rem"
    }
  },
  
  "components": {
    "button": {
      "variants": ["primary", "secondary", "outline"],
      "sizes": ["sm", "md", "lg"],
      "customStyles": {
        "primary": {
          "backgroundColor": "{colors.primary.500}",
          "color": "{colors.neutral.50}",
          "hover": {
            "backgroundColor": "{colors.primary.600}"
          }
        }
      }
    }
  },
  
  "darkMode": {
    "enabled": true,
    "strategy": "class"
  },
  
  "generation": {
    "output": {
      "tailwindConfig": true,
      "globalCSS": true,
      "cssVariables": true,
      "documentation": true
    }
  }
}
